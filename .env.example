# File Path: automotive-salah\.env.example
# Database
DATABASE_URL="mongodb://localhost:27017/automotive-locksmith"
REDIS_URL="redis://localhost:6379"

# Authentication
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"
JWT_SECRET="your-jwt-secret-here"

# Payment Providers
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
AUTHORIZE_NET_API_LOGIN_ID="your-api-login-id"
AUTHORIZE_NET_TRANSACTION_KEY="your-transaction-key"

# Email Service
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@yourdomain.com"

# File Storage
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=10485760

# API Configuration
API_URL="http://localhost:4000"
FRONTEND_URL="http://localhost:3000"
ADMIN_URL="http://localhost:3001"

# Production URLs (update for deployment)
PROD_API_URL="https://api.yourdomain.com"
PROD_FRONTEND_URL="https://yourdomain.com"
PROD_ADMIN_URL="https://admin.yourdomain.com"
